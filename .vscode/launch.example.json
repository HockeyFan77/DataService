{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "API + Blazor",
      "configurations": ["API", "Blazor"],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-api",
      "program": "${workspaceFolder}/data-service-api/bin/Debug/net9.0/data-service-api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/data-service-api",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Blazor",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-blazor",
      "program": "${workspaceFolder}/data-service-blazor/bin/Debug/net9.0/data-service-blazor.dll",
      "args": [],
      "cwd": "${workspaceFolder}/data-service-blazor",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      //"serverReadyAction": {
      //  "action": "openExternally",
      //  "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      //},
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "API Unit Tests",
      "type": "coreclr",
      "request": "launch",
      //"preLaunchTask": "run-api-tests",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/data-service-api.tests/data-service-api.tests.csproj",
        // Optional: To run only specific tests, add arguments here.
        // For example, to run tests in a class: "--filter", "Fully.Qualified.ClassName"
      ],
      "cwd": "${workspaceFolder}/data-service-api.tests",
      "console": "internalConsole",
      "stopAtEntry": false,
      "justMyCode": false
    }
  ]
}
