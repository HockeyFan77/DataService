{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/data-service-api"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-blazor",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/data-service-blazor/data-service-blazor.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run-api-tests",
      "type": "process",
      "command": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/data-service-api.tests/data-service-api.tests.csproj",
        // Optional: You can specify the logger for test results
        "--logger",
        "trx"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "close": false,
        "reveal": "always",
        "panel": "shared"
      },
      "detail": "Runs all MSTest unit tests in the dedicated test project."
    }
  ]
}